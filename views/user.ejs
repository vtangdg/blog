<%- include header %>
<div class="container">
  <div class="blog-user">
    <h1><%- title %></h1>
    <% posts.forEach(function (post, index) { %>
      <p><h2><a href="/p/<%= post._id %>"><%= post.title %></a></h2></p>
      <p class="info">
        作者：<a href="/u/<%= post.name %>"><%= post.name %></a> |
        日期：<%= post.time.minute %>
      </p>
      <p><%- post.post %></p>
      <p class="info">
        阅读：<%= post.pv %> |
        评论：<%= post.comments.length %> |
        转载：
        <% if (post.reprint_info.reprint_to) { %>
          <%= post.reprint_info.reprint_to.length %>
        <% } else { %>
          <%= 0 %>
        <% } %>
      </p>
    <% }) %>
    <%- include paging %>
  </div>
</div>
<%- include footer %>
